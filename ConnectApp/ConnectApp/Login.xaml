<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectApp.Login">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="20">

            <Entry Placeholder="Email" x:Name="txtEmail" HorizontalOptions="FillAndExpand"/>
            <Entry Placeholder="Password" x:Name="txtPassword" HorizontalOptions="FillAndExpand" IsPassword="true"/>
            <Button Text="Login" Clicked="Login_Clicked" HeightRequest="50" HorizontalOptions="Center"/>

            <Button Text="Register" Clicked="Register_Clicked" HeightRequest="50" HorizontalOptions="Center"/>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>