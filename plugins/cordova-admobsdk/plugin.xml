<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-admobsdk"
        version="7.49.0">
      
    <name>Google Mobile Ads SDK for Cordova</name>
    <description>Adds Google Mobile Ads SDK to Cordova projects, as dependency for other plugins</description>
    <author>Google</author>
    <keywords>rjfun,admob,google,ad</keywords>
    <repo>https://gitlab.com/floatinghotpot/cordova-admobsdk.git</repo>
    <issue>https://gitlab.com/floatinghotpot/cordova-admobsdk/issues</issue>

    <engines>
        <engine name="cordova" version=">=3.0" />
    </engines>

    <platform name="android">
    </platform>
     
    <platform name="amazon-fireos">
    </platform>

    <platform name="ios">
        <framework src="GoogleAppMeasurement.framework" custom="true" />
        <framework src="GoogleMobileAds.framework" custom="true" />
        <framework src="GoogleUtilities.framework" custom="true" />
        <framework src="nanopb.framework" custom="true" />
        
        <framework src="AdSupport.framework" />
        <framework src="AudioToolbox.framework" />
        <framework src="AVFoundation.framework" />
        <framework src="CoreBluetooth.framework" />
        <framework src="CoreGraphics.framework" />
        <framework src="CoreLocation.framework" />
        <framework src="CoreMedia.framework" />
        <framework src="CoreMotion.framework" />
        <framework src="CoreTelephony.framework" />
        <framework src="CoreVideo.framework" />
        <framework src="EventKit.framework" />
        <framework src="EventKitUI.framework" />
        <framework src="Foundation.framework" />
        <framework src="GLKit.framework" />
        <framework src="MediaPlayer.framework" />
        <framework src="MessageUI.framework" />
        <framework src="OpenGLES.framework" />
        <framework src="SafariServices.framework" />
        <framework src="StoreKit.framework" />
        <framework src="SystemConfiguration.framework" />
        <framework src="UIKit.framework" />
    </platform>

</plugin>
